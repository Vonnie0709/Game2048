<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_share_panel_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bbada0"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/share_panel_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_delete" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/ll_share_panel_close"
        android:background="@color/color_bbada0"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#43ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="@string/goto_share"
                android:textColor="@color/color_f9f9f0" />

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#48ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share_goto_weibo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/share_weibo" />

            <ImageView
                android:id="@+id/share_goto_weixin"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/share_weixin" />

            <ImageView
                android:id="@+id/share_goto_pengyouquan"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/share_pengyouquan" />

            <ImageView
                android:id="@+id/share_goto_qq"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/share_qq" />

            <ImageView
                android:id="@+id/share_goto_kj"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/share_kj" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>